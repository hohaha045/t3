# Enable VIA for remapping
VIA_ENABLE = yes

# Enable mouse keycodes
MOUSEKEY_ENABLE = yes

# Enable combo feature
COMBO_ENABLE = yes

# Disable tap dance
TAP_DANCE_ENABLE = no

# Allow per-key tapping term
DYNAMIC_TAPPING_TERM_ENABLE = yes

# Enable debugging console (for printf/logging)
CONSOLE_ENABLE = yes

# Enable trackball / trackpad support (PMW3360 + Cirque)
POINTING_DEVICE_ENABLE = yes

# Use custom pointing device driver
POINTING_DEVICE_DRIVER = custom
